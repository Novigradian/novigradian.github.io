---
const experiences = [
  {
    role: "Game Developer",
    organization: "University Game Dev Club",
    period: "2023 - Present",
    type: "Extracurricular",
    description: "Leading team projects, organizing game jams, and mentoring new members in game development fundamentals.",
    highlights: [
      "Organized 3 successful game jams with 50+ participants",
      "Led development of 2 collaborative game projects",
      "Conducted workshops on Unity and game design principles"
    ]
  },
  {
    role: "Programming Team Member",
    organization: "University Robotics Club",
    period: "2023 - Present",
    type: "Extracurricular",
    description: "Developing control systems and UI for autonomous robots, applying game programming skills to real-world applications.",
    highlights: [
      "Programmed robot navigation systems in C++",
      "Created visualization tools for robot sensors",
      "Competed in regional robotics competitions"
    ]
  },
  {
    role: "Teaching Assistant",
    organization: "Introduction to Programming Course",
    period: "Fall 2024",
    type: "Academic",
    description: "Assisted students with programming fundamentals, held office hours, and graded assignments.",
    highlights: [
      "Helped 30+ students improve their coding skills",
      "Created supplementary learning materials",
      "Received positive feedback from students and faculty"
    ]
  },
  {
    role: "Game Jam Participant",
    organization: "Ludum Dare / Global Game Jam",
    period: "2022 - Present",
    type: "Community",
    description: "Regular participant in game jams, creating complete games under tight time constraints.",
    highlights: [
      "Completed 8+ game jam entries",
      "Won 'Best Gameplay' award at university game jam",
      "Built portfolio of experimental game mechanics"
    ]
  },
  {
    role: "Freelance Game Developer",
    organization: "Independent",
    period: "Summer 2024",
    type: "Work",
    description: "Created educational mini-games for a local education startup.",
    highlights: [
      "Developed 3 educational games in Unity",
      "Worked directly with clients on game design",
      "Managed project timeline and deliverables"
    ]
  }
];

const typeColors = {
  "Extracurricular": "text-purple-400 border-purple-500/30 bg-purple-500/10",
  "Academic": "text-blue-400 border-blue-500/30 bg-blue-500/10",
  "Community": "text-cyan-400 border-cyan-500/30 bg-cyan-500/10",
  "Work": "text-green-400 border-green-500/30 bg-green-500/10"
};
---

<section id="experience" class="py-24 relative">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="mb-16 animate-on-scroll opacity-0 translate-y-8 transition-all duration-1000">
      <div class="flex items-center gap-3 mb-4">
        <span class="h-px w-8 bg-slate-700"></span>
        <span class="text-slate-500 text-sm font-medium tracking-wider uppercase" style="font-family: var(--font-display);">Experience</span>
      </div>
      <h2 class="text-4xl md:text-5xl font-bold mb-4">
        <span class="text-slate-200" >My Journey</span>
      </h2>
      <p class="text-slate-400 text-lg">
        A timeline of my involvement in game development and related activities
      </p>
    </div>

    <!-- Experience Timeline -->
    <div class="space-y-8">
      {experiences.map((exp, index) => (
        <div 
          class="relative pl-8 md:pl-12 border-l-2 border-slate-800 animate-on-scroll opacity-0 translate-y-8 transition-all duration-1000"
          style={`transition-delay: ${index * 100}ms`}
        >
          {/* Timeline dot */}
          <div class="absolute left-0 top-0 -translate-x-[9px] w-4 h-4 rounded-full bg-slate-700 border-4 border-slate-950"></div>

          {/* Content */}
          <div class="bg-slate-900/50 border border-slate-800 rounded-lg p-6 hover:border-slate-700 transition-colors">
            <div class="flex flex-wrap items-start justify-between gap-3 mb-3">
              <div>
                <h3 class="text-xl font-bold text-slate-100 mb-1">{exp.role}</h3>
                <p class="text-slate-400">{exp.organization}</p>
              </div>
              <div class="flex flex-col items-end gap-2">
                <span class="text-sm text-slate-500 font-medium">{exp.period}</span>
                <span class={`text-xs px-2.5 py-1 rounded-full border font-medium ${typeColors[exp.type]}`}>
                  {exp.type}
                </span>
              </div>
            </div>

            <p class="text-slate-300 mb-4 leading-relaxed">
              {exp.description}
            </p>

            {/* Highlights */}
            <div class="space-y-2">
              {exp.highlights.map((highlight) => (
                <div class="flex items-start gap-2 text-sm text-slate-400">
                  <svg class="w-4 h-4 mt-0.5 text-slate-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                  <span>{highlight}</span>
                </div>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Download Resume CTA -->
    <div class="text-center mt-12 animate-on-scroll opacity-0 translate-y-8 transition-all duration-1000">
      <a 
        href="/resume.pdf" 
        download
        class="inline-flex items-center gap-2 px-6 py-2.5 text-slate-300 rounded-md font-medium border border-slate-700 hover:border-slate-500 hover:text-white transition-all duration-300"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        Download Resume
      </a>
    </div>
  </div>
</section>
