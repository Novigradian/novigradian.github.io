---
export interface Game {
  title: string;
  description: string;
  image: string;
  video?: string;
  tags: string[];
  teamSize: number;
  duration: string;
  steam?: string;
  itch?: string;
  youtube?: string;
  demo?: string;
  year: string;
  badge?: string;
}

const games: Game[] = [
{
    title: "Red Tide",
    description: "Manage a postapocalyptic oceanic settlement in this strategic roguelike tower defense. Guide your people in an endless struggle for survival and faith.",
    image: "/games/game2.jpg",
    video: "/gameplay/red_tide.mp4",
    tags: ["Solo Dev", "2D", "Devlog"],
    teamSize: 1,
    duration: "Ongoing",
    youtube: "https://www.youtube.com/watch?v=ntgj9z5DBSE&t=246s",
    year: "2024",
    badge: "In Development",
  },  
{
    title: "Overdawn",
    description: "A bullet hell shooter set in the dystopian city of Andrean. As a blood-thirsty merc, hunt down your enemies and defy against your destiny.",
    image: "/games/game1.jpg",
    video: "/gameplay/overdawn2.mp4",
    tags: ["Engineer", "Unity", "C#", "2.5D", "Steam"],
    teamSize: 20,
    duration: "3 months",
    steam: "https://store.steampowered.com/app/3519070/Overdawn/",
    year: "2025",
    badge: "New Release",
  },
  
  {
    title: "Headless Hotel",
    description: "Waking up in a hotel of horrors, you have only one job: to escape the hotel alive. Made for the Brackey's 2024 Game Jam.",
    image: "/games/game3.jpg",
    video: "/gameplay/headless_hotel.mp4",
    tags: ["Engineer", "Level Design", "Game Jam", "Unity", "C#", "2D"],
    teamSize: 8,
    duration: "7 days",
    itch: "https://henry-hamster.itch.io/headless-hotel",
    year: "2024",
  },
  {
    title: "Vendetta",
    description: "Swordfighting game set in Renaissance Italy with a grueling difficulty. Final project for Carnegie Mellon University's NHSGA Summer Program.",
    image: "/games/game4.jpg",
    video: "/gameplay/vendetta.mp4",
    tags: ["Producer", "Lead Engineer", "Narrative", "Combat Design", "Unity", "C#", "2D"],
    teamSize: 5,
    duration: "3 weeks",
    steam: "https://novigradian7.itch.io/vendetta",
    year: "2023",
  },
];
---

<section id="games" class="py-24 relative">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="mb-16 animate-on-scroll opacity-0 translate-y-8 transition-all duration-1000">
      <div class="flex items-center gap-3 mb-4">
        <span class="h-px w-8 bg-slate-700"></span>
        <span class="text-slate-500 text-sm font-medium tracking-wider uppercase">Portfolio</span>
      </div>
      <h2 class="text-4xl md:text-5xl font-bold mb-4">
        <span class="text-slate-200" style="font-family: var(--font-display);">My Games</span>
      </h2>
      <p class="text-slate-400 text-lg max-w-2xl">
        A collection of projects showcasing my journey in game development
      </p>
    </div>

    <!-- Games Grid -->
    <div class="grid md:grid-cols-2 gap-8">
      {games.map((game, index) => (
        <div 
          class="group relative bg-slate-900/50 border border-slate-800 hover:border-slate-700 rounded-lg overflow-hidden transition-all duration-500 animate-on-scroll opacity-0 translate-y-8"
          style={`transition-delay: ${index * 100}ms`}
        >
          {/* Featured Badge */}
          {game.badge && (
            <div class="absolute top-4 right-4 z-10 px-3 py-1 bg-white/10 backdrop-blur-sm border border-white/20 text-slate-200 text-xs font-medium rounded-full">
              {game.badge}
            </div>
          )}

          {/* Game Video/Image */}
          <div class="relative h-64 bg-slate-800 overflow-hidden">
            {game.video ? (
              <video 
                autoplay 
                loop 
                muted 
                playsinline 
                class="absolute inset-0 w-full h-full object-cover"
              >
                <source src={game.video} type="video/mp4" />
              </video>
            ) : (
              <div class="absolute inset-0 flex items-center justify-center">
                {/* Placeholder - replace with actual game screenshots */}
                <svg class="w-20 h-20 text-slate-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
            )}
            {/* Overlay on hover */}
            <div class="absolute inset-0 bg-slate-950/80 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center gap-3">
              {game.steam && (
                <a 
                  href={game.steam} 
                  target="_blank" 
                  rel="noopener"
                  class="p-3 bg-slate-800 rounded-lg hover:bg-slate-700 transition-colors"
                  aria-label="View on Steam"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M11.979 0C5.678 0 .511 4.86.022 11.037l6.432 2.658c.545-.371 1.203-.59 1.912-.59.063 0 .125.004.188.006l2.861-4.142V8.91c0-2.495 2.028-4.524 4.524-4.524 2.494 0 4.524 2.031 4.524 4.527s-2.03 4.525-4.524 4.525h-.105l-4.076 2.911c0 .052.004.105.004.159 0 1.875-1.515 3.396-3.39 3.396-1.635 0-3.016-1.173-3.331-2.727L.436 15.27C1.862 20.307 6.486 24 11.979 24c6.627 0 11.999-5.373 11.999-12S18.605 0 11.979 0zM7.54 18.21l-1.473-.61c.262.543.714.999 1.314 1.25 1.297.539 2.793-.076 3.332-1.375.263-.63.264-1.319.005-1.949s-.75-1.121-1.377-1.383c-.624-.26-1.29-.249-1.878-.03l1.523.63c.956.4 1.409 1.5 1.009 2.455-.397.957-1.497 1.41-2.454 1.012H7.54zm11.415-9.303c0-1.662-1.353-3.015-3.015-3.015-1.665 0-3.015 1.353-3.015 3.015 0 1.665 1.35 3.015 3.015 3.015 1.663 0 3.015-1.35 3.015-3.015zm-5.273-.005c0-1.252 1.013-2.266 2.265-2.266 1.249 0 2.266 1.014 2.266 2.266 0 1.251-1.017 2.265-2.266 2.265-1.253 0-2.265-1.014-2.265-2.265z"/>
                  </svg>
                </a>
              )}
              {game.itch && (
                <a 
                  href={game.itch} 
                  target="_blank" 
                  rel="noopener"
                  class="p-3 bg-slate-800 rounded-lg hover:bg-slate-700 transition-colors"
                  aria-label="View on itch.io"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M3.13 1.338C2.08 1.96.02 4.328 0 4.95v1.03c0 1.303 1.22 2.45 2.325 2.45 1.33 0 2.436-1.102 2.436-2.41 0 1.308 1.07 2.41 2.4 2.41 1.328 0 2.362-1.102 2.362-2.41 0 1.308 1.137 2.41 2.466 2.41h.024c1.33 0 2.466-1.102 2.466-2.41 0 1.308 1.034 2.41 2.363 2.41 1.33 0 2.4-1.102 2.4-2.41 0 1.308 1.106 2.41 2.435 2.41C22.78 8.43 24 7.283 24 5.98V4.95c-.02-.62-2.082-2.99-3.13-3.612-3.253-.114-5.508-.134-8.87-.133-3.362 0-7.945.053-8.87.133zm6.376 6.477a2.74 2.74 0 0 1 2.74 2.74v6.525c0 .287.157.55.387.688.23.138.51.126.73-.03l2.35-1.645c.23-.16.53-.167.78-.02l2.445 1.665c.22.156.5.168.73.03.23-.138.387-.4.387-.688v-6.525a2.74 2.74 0 0 1 2.74-2.74h.02a2.74 2.74 0 0 1 2.74 2.74v6.525c0 1.01-.55 1.94-1.41 2.42-.86.48-1.92.45-2.76-.08l-2.44-1.665-2.35 1.645c-.84.53-1.9.56-2.76.08-.86-.48-1.41-1.41-1.41-2.42v-6.525a2.74 2.74 0 0 1 2.74-2.74z"/>
                  </svg>
                </a>
              )}
              {game.youtube && (
                <a 
                  href={game.youtube} 
                  target="_blank" 
                  rel="noopener"
                  class="p-3 bg-slate-800 rounded-lg hover:bg-slate-700 transition-colors"
                  aria-label="Watch on YouTube"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                  </svg>
                </a>
              )}
              {game.demo && (
                <a 
                  href={game.demo} 
                  target="_blank" 
                  rel="noopener"
                  class="p-3 bg-slate-800 rounded-lg hover:bg-slate-700 transition-colors"
                  aria-label="Play demo"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </a>
              )}
            </div>
          </div>

          {/* Game Content */}
          <div class="p-6">
            <div class="flex items-center justify-between mb-2">
              <h3 class="text-xl font-bold text-slate-100">
                {game.title}
              </h3>
              <span class="text-slate-500 text-sm">{game.year}</span>
            </div>
            
            <p class="text-slate-400 text-sm mb-4 leading-relaxed">
              {game.description}
            </p>
            
            <div class="flex items-center gap-4 mb-3">
              <div class="flex items-center gap-1.5">
                <svg class="w-4 h-4 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
                <span class="text-xs font-medium text-slate-300">{game.teamSize}</span>
              </div>
              <div class="flex items-center gap-1.5">
                <svg class="w-4 h-4 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span class="text-xs font-medium text-slate-300">{game.duration}</span>
              </div>
            </div>

            {/* Tags */}
            <div class="flex flex-wrap gap-2">
              {game.tags.map((tag) => (
                <span class="px-2.5 py-1 text-xs font-medium bg-slate-800 text-slate-300 rounded border border-slate-700">
                  {tag}
                </span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>

    {/* View More Button */}
    <div class="text-center mt-12 animate-on-scroll opacity-0 translate-y-8 transition-all duration-1000">
      <a 
        href="https://itch.io/profile/yourusername" 
        target="_blank"
        rel="noopener"
        class="inline-flex items-center gap-2 px-6 py-2.5 text-slate-300 rounded-md font-medium border border-slate-700 hover:border-slate-500 hover:text-white transition-all duration-300"
      >
        View All on itch.io
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
        </svg>
      </a>
    </div>
  </div>
</section>
