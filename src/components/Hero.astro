<style>
  @keyframes pulse {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 0.5; }
  }
  
  .delay-1000 {
    animation-delay: 1s;
  }

  .animate-on-scroll.in-view {
    opacity: 1 !important;
    transform: translateY(0) !important;
  }

  .skill-badge {
    position: relative;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    transform-style: preserve-3d;
  }

  .skill-badge::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: inherit;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-accent) 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: -1;
  }

  .skill-badge:hover {
    background: rgba(30, 41, 59, 0.8);
    border-color: var(--color-primary);
    color: white;
    box-shadow: 0 10px 25px -5px rgba(168, 85, 247, 0.4);
  }

  .skill-badge:hover::before {
    opacity: 0.1;
  }

  /* Contact button effects */
  .contact-btn {
    position: relative;
    isolation: isolate;
  }

  .contact-btn::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, 
      #581c87, 
      #854d0e);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 0;
    border-radius: inherit;
  }

  .contact-btn::after {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at center, rgba(255, 255, 255, 0.8), transparent 70%);
    opacity: 0;
    transform: scale(0);
    transition: all 0.6s ease;
    z-index: 1;
    border-radius: inherit;
  }

  .contact-btn:hover {
    border-color: rgba(168, 85, 247, 0.3);
    color: white;
    box-shadow: 
      0 0 15px rgba(168, 85, 247, 0.2),
      inset 0 0 20px rgba(168, 85, 247, 0.05);
  }

  .contact-btn:hover::before {
    transform: scaleX(1);
  }

  .contact-btn:hover::after {
    opacity: 0.2;
    transform: scale(1);
    animation: pulse-glow 2s infinite;
  }

  @keyframes pulse-glow {
    0%, 100% { 
      opacity: 0.2;
      transform: scale(1);
    }
    50% { 
      opacity: 0.4;
      transform: scale(1.1);
    }
  }
</style>

<script>
  // Responsive hover effects for skill badges based on cursor position
  document.addEventListener('DOMContentLoaded', () => {
    const skillBadges = document.querySelectorAll('.skill-badge');
    
    skillBadges.forEach(badge => {
      badge.addEventListener('mousemove', (e: Event) => {
        const mouseEvent = e as MouseEvent;
        const element = badge as HTMLElement;
        const rect = element.getBoundingClientRect();
        const x = mouseEvent.clientX - rect.left; // Mouse X relative to badge
        const y = mouseEvent.clientY - rect.top;  // Mouse Y relative to badge
        
        const centerX = rect.width / 2;
        const centerY = rect.height / 2;
        
        // Calculate rotation based on cursor position (max Â±10 degrees)
        const rotateX = ((y - centerY) / centerY) * -10;
        const rotateY = ((x - centerX) / centerX) * 10;
        
        // Apply 3D transform
        element.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg)`;
      });
      
      badge.addEventListener('mouseleave', () => {
        // Reset transform on mouse leave
        (badge as HTMLElement).style.transform = '';
      });
    });
  });
</script>
